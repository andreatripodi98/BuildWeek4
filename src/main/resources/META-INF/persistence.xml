<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">

    <persistence-unit name="bw4pu" transaction-type="RESOURCE_LOCAL">
        <class>andreapia.entities.Tessera</class>
        <class>andreapia.entities.Utente</class>
        <class>andreapia.entities.Abbonamenti</class>
        <class>andreapia.entities.Biglietti</class>
        <class>andreapia.entities.BigliettiVidimati</class>
        <class>andreapia.entities.Corsa</class>
        <class>andreapia.entities.Distributore</class>
        <class>andreapia.entities.Mezzi</class>
        <class>andreapia.entities.Rivenditore</class>
        <class>andreapia.entities.Ticket</class>
        <class>andreapia.entities.Tratta</class>
        <class>andreapia.entities.StoricoMezzi</class>
        <class>andreapia.entities.Venditore</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/bw4"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
